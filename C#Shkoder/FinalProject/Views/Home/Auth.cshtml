<section class="hero d-flex flex-column justify-content-center align-items-center" id="home">

  <div class="bg-overlay"></div>

  <div class="container">
    <div class="row">

      <div class="col-lg-8 col-md-10 mx-auto col-12">
        <div class="hero-text mt-5 text-center">

          <h6 data-aos="fade-up" data-aos-delay="300">new way to build a healthy lifestyle!</h6>

          <h1 class="text-white" data-aos="fade-up" data-aos-delay="500">Upgrade your body</h1>

          <a href="#feature" class="btn custom-btn mt-3" data-aos="fade-up" data-aos-delay="600">Get started</a>

          <a href="#about" class="btn custom-btn bordered mt-3" data-aos="fade-up" data-aos-delay="700">learn more</a>

        </div>
      </div>

    </div>
  </div>
</section>


<section class="feature" id="feature">
  <div class="container">
    <div class="row">

      <div class="d-flex flex-column justify-content-center ml-lg-auto mr-lg-5 col-lg-5 col-md-6 col-12">
        <h2 class="mb-3 text-white" data-aos="fade-up">New to the GymSphere?</h2>

        <h6 class="mb-4 text-white" data-aos="fade-up">Sign up today</h6>


        <a class="btn custom-btn bg-color mt-3" data-aos="fade-up" data-aos-delay="300" data-bs-toggle="modal"
          data-bs-target="#exampleModal">Become a member today</a>
      </div>

      <div class="mr-lg-auto mt-3 col-lg-4 col-md-6 col-12">
        <div class="about-working-hours">
          <div>

            <h2 class="mb-4 text-white" data-aos="fade-up" data-aos-delay="500">Working hours</h2>

            <strong class="d-block" data-aos="fade-up" data-aos-delay="600">Sunday : Closed</strong>

            <strong class="mt-3 d-block" data-aos="fade-up" data-aos-delay="700">Monday - Friday</strong>

            <p data-aos="fade-up" data-aos-delay="800">7:00 AM - 10:00 PM</p>

            <strong class="mt-3 d-block" data-aos="fade-up" data-aos-delay="700">Saturday</strong>

            <p data-aos="fade-up" data-aos-delay="800">6:00 AM - 4:00 PM</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- ABOUT -->
<section class="about section" id="about">
  <div class="container">
    <div class="row">

      <div class="mt-lg-5 mb-lg-0 mb-4 col-lg-5 col-md-10 mx-auto col-12">
        <h2 class="mb-4" data-aos="fade-up" data-aos-delay="300">Meet our instructors</h2>

        <p data-aos="fade-up" data-aos-delay="400">They are here to help you acheive your goals</p>
        <p data-aos="fade-up" data-aos-delay="400">Calculate your Bmi Here</p>
        <div class="bo data-aos="fade-up" data-aos-delay="400">
          <div class="ainer" data-aos="fade-up" data-aos-delay="400">
            <h2>BMI Calculator</h2>
            <label for="weight" data-aos="fade-up" data-aos-delay="400">Weight (kg):</label>
            <input type="number" data-aos="fade-up" data-aos-delay="400" id="weight" placeholder="Enter your weight">
            <label for="height" data-aos="fade-up" data-aos-delay="400">Height (cm):</label>
            <input type="number" data-aos="fade-up" data-aos-delay="400" id="height" placeholder="Enter your height">
            <button onclick="calculateBMI()" class="ton" data-aos="fade-up" data-aos-delay="400">Calculate BMI</button>
            <div id="result"></div>
          </div>
        </div>


      </div>

@if (ViewBag.instructors != null && ViewBag.instructors.Count > 0)
{
    @foreach (var item in ViewBag.instructors)
    {
        <div class="ml-lg-auto col-lg-3 col-md-6 col-12" data-aos="fade-up" data-aos-delay="700">
            <div class="team-thumb">
                <img src="images/team/team-image.jpg" class="img-fluid" alt="Trainer">
                <div class="team-info d-flex flex-column">
                    <h3>@item.Username</h3>
                    <span>Specialiteti: @item.Specialized</span>
                </div>
            </div>
        </div>
    }
}
else
{
    <p>No instructors available</p>
}





    </div>
  </div>
</section>


<!-- CLASS -->
<section class="class section" id="class">
  <div class="container">
    <div class="row">

      <div class="col-lg-12 col-12 text-center mb-5">
        <h6 data-aos="fade-up">Get A Perfect Body</h6>

        <h2 data-aos="fade-up" data-aos-delay="200">Our Training Classes</h2>
      </div>

@if (ViewBag.klasat != null)
{
    @foreach (var item in ViewBag.klasat)
    {
        <div class="mt-5 mt-lg-0 mt-md-0 col-lg-4 col-md-6 col-12" data-aos="fade-up" data-aos-delay="500">
            <div class="class-thumb">
                <img src="images/class/crossfit-class.jpg" class="img-fluid" alt="Class">
                <div class="class-info">
                    <h3 class="mb-1">@item.Name</h3>
                    <p class="mt-3">@item.Description</p>
                    @* <p class="mt-3">Deadline: @item.Deadline.ToShortDateString()</p> *@
                </div>
            </div>
        </div>
    }
}


    </div>
  </div>
</section>




<!-- CONTACT -->




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <div class="modal-content">
      <div class="modal-header">

        <h2 class="modal-title" id="membershipFormLabel">Membership Sign up</h2>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

      </div>

      <div class="modal-body">
        @model User
        <form class="membership-form webform" asp-action="Register" id="registerForm" method="post" role="form">
          <input type="text" asp-for="FirstName" class="form-control" placeholder="John">
          <span asp-validation-for="FirstName"></span>

          <input type="text" asp-for="LastName" class="form-control" placeholder="Doe">
          <span asp-validation-for="LastName"></span>

          <input type="text" asp-for="Username" class="form-control" placeholder="johndoe">
          <span asp-validation-for="Username"></span>
          <input type="password" asp-for="Password" class="form-control" placeholder="Password">
          <span asp-validation-for="Password"></span>


          <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="Confirm Password">
          <span asp-validation-for="PasswordConfirm"></span>



          <button type="submit" class="form-control" id="submit-button" name="submit">Register</button>

        </form>
      </div>

      <div class="modal-footer"></div>

    </div>
  </div>
</div>


<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <div class="modal-content">
      <div class="modal-header">

        <h2 class="modal-title" id="membershipFormLabel">Login</h2>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

      </div>

      <div class="modal-body">
        <form class="membership-form webform" asp-action="Login" id="loginForm" method="post" role="form">

          <input type="text" asp-for="Username" class="form-control" placeholder="johndoe">
          <span asp-validation-for="Username"></span>

          <input type="password" asp-for="Password" class="form-control" placeholder="Password">
          <span asp-validation-for="Password"></span>

          <button type="submit" class="form-control" id="submit-button" name="submit">Login</button>

        </form>
      </div>

      <div class="modal-footer"></div>

    </div>
  </div>
</div>


