@model User

<form asp-action="Register" method="post">
    <div class="container mt-2 form-control con border-dark">
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="FirstName"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="LastName"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="Username"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="Password"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="PasswordConfirm" class="form-label"></label>
                <input asp-for="PasswordConfirm" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="PasswordConfirm"></span>
            </span>
        </div>
        <div class="d-flex justify-content-center">
            <input type="submit" value="Register" class="btn btn-primary loginbtn">
        </div>
    </div>
</form>