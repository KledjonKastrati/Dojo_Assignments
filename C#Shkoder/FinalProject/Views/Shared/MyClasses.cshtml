@model List<FinalProject.Models.Pjesemarrje>

<h1 data-aos="fade-up" style="margin-top: 70px;" class="text-center">Classes Attended</h1>

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Programi.Name)</h5>
                        <p class="card-text">Instructor: @(item.Programi?.Creator?.Username ?? "N/A")</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p data-aos="fade-up" data-aos-delay="800">No classes attended.</p>
}
