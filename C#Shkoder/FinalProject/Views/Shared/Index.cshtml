@model Instructor
<section class="class section" id="class">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center mb-5">
                <h6 data-aos="fade-up">Get A Perfect Body</h6>
                <h2 data-aos="fade-up" data-aos-delay="200">Our Training Classes</h2>
            </div>

            @foreach (var item in ViewBag.klasat)
            {
                <div class="mt-5 mt-lg-0 mt-md-0 col-lg-4 col-md-6 col-12" data-aos="fade-up" data-aos-delay="500">
                    <div class="class-thumb">
                        <img src="images/class/crossfit-class.jpg" class="img-fluid" alt="Class">
                        <div class="class-info">
                            <h3 class="mb-1">
                                <a asp-action="Details" asp-route-id="@item.ProgramiId">@item.Name</a>
                            </h3>
                            <p class="mt-3">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="about section" id="about">
    <div class="container">
        <div class="row">

            <div class="mt-lg-5 mb-lg-0 mb-4 col-lg-5 col-md-10 mx-auto col-12">
                <h2 class="mb-4" data-aos="fade-up" data-aos-delay="300">Meet our instructors</h2>

                <p data-aos="fade-up" data-aos-delay="300">They are here to help you acheive your goals</p>

                <a class="btn backround-black mt-3" asp-action="ViewProgram" 
                    data-aos="fade-up" data-aos-delay="300" data-bs-target="#exampleModal">View
                    Programs</a>
                    @if (Context.Session.GetInt32("InstructorId") ==ViewBag.UserId)
{
    <a class="btn backround-black mt-3" asp-action="AddProgrami" data-aos="fade-up" data-aos-delay="300" data-bs-target="#exampleModal">Add Programs</a>
}
    @if(Context.Session.GetInt32("UserId") ==ViewBag.UserId){
            <a class="btn backround-black mt-3" asp-action="MyClasses" data-aos="fade-up" data-aos-delay="300" data-bs-target="#exampleModal">View My Classes</a>

    }


                    


            </div>

            @foreach (var item in ViewBag.instructors)
            {
                <div class="ml-lg-auto col-lg-3 col-md-6 col-12" data-aos="fade-up" data-aos-delay="700">
                    <div class="team-thumb">
                        <img src="images/team/team-image.jpg" class="img-fluid" alt="Trainer">
                        <div class="team-info d-flex flex-column">

                            <h3>@item.Username</h3>
                            <span>Specialized : @item.Specialized</span>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</section>