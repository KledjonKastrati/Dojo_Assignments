@model List<Programi>


<h2 class="programs text-center" data-aos="fade-up" data-aos-delay="700">Programs</h2>

<div class="container mt-5">
    <div class="row">
        @foreach (var program in @Model)
        {
            <div class="col-lg-4 col-md-6 col-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h2>@program.Name</h2>
                        <p>@program.Description</p>

                        @if (Context.Session.GetInt32("InstructorId") == ViewBag.UserId)
                        {
                            <div class="boo">
                            <a class="btn backround-black" asp-action="EditProgram" asp-controller="Instructor"
                                asp-route-id="@program.ProgramiId">Edit Program</a>
                            <form asp-action="DeleteProgram" asp-controller="Instructor" method="post" class="forma">
                                <input type="hidden" name="id" value="@program.ProgramiId" />
                                <button type="submit" class="btn backround-black">Delete Program</button>
                            </form>
                            </div>
                        }
                        else
                        {
                            <form asp-action="JoinProgram" asp-controller="Home" asp-route-id="@program.ProgramiId">
                            <button class="btn backround-black">Join Program</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
