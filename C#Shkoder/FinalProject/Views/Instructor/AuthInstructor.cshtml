<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <div class="modal-content">
      <div class="modal-header">

        <h2 class="modal-title" id="membershipFormLabel">Instructor  Sign up</h2>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

      </div>

      <div class="modal-body">
        @model Instructor
        <form class="membership-form webform" asp-action="RegisterInstructor" method="post" id="registerForm" role="form">
          <input type="text" asp-for="InstructorFirstName" class="form-control" placeholder="John">
          <span asp-validation-for="InstructorFirstName"></span>

          <input type="text" asp-for="InstructorLastName" class="form-control" placeholder="Doe">
          <span asp-validation-for="InstructorLastName"></span>

          <input type="text" asp-for="Username" class="form-control" placeholder="UserName">
          <span asp-validation-for="Username"></span>

          <input type="password" asp-for="InstructorAge" class="form-control" placeholder="Age">
          <span asp-validation-for="InstructorAge"></span>


          <input type="text" asp-for="Specialized" class="form-control" placeholder="Specialized">
          <span asp-validation-for="Specialized"></span>

          <input type="password" asp-for="Password" class="form-control" placeholder="Password">
          <span asp-validation-for="Password"></span>

          <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="Confirm Password">
          <span asp-validation-for="PasswordConfirm"></span>



          <button type="submit" class="form-control" id="submit-button" name="submit">Register as Instructor</button>

        </form>
      </div>

      <div class="modal-footer"></div>

    </div>
  </div>
</div>


<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <div class="modal-content">
      <div class="modal-header">

        <h2 class="modal-title" id="membershipFormLabel">Login</h2>

        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

      </div>

      <div class="modal-body">
        <form class="membership-form webform" asp-action="LoginInstructor" method="post" id="loginForm" role="form">

          <input type="text" asp-for="Username" class="form-control" placeholder="johndoe">
          <span asp-validation-for="Username"></span>

          <input type="password" asp-for="Password" class="form-control" placeholder="Password">
          <span asp-validation-for="Password"></span>

          <button type="submit" class="form-control" id="submit-button" name="submit">Login as Instructor</button>

        </form>
      </div>

      <div class="modal-footer"></div>

    </div>
  </div>\

</div>

