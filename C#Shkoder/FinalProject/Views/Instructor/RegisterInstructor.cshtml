@model Instructor

<form asp-action="RegisterInstructor" method="post">
    <div class="container mt-5 form-control  border-dark">
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="InstructorFirstName" class="form-label"></label>
                <input asp-for="InstructorFirstName" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="InstructorFirstName"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="InstructorLastName" class="form-label"></label>
                <input asp-for="InstructorLastName" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="InstructorLastName"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Specialized" class="form-label"></label>
                <input asp-for="Specialized" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="Specialized"></span>
            </span>
        </div>
                <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="InstructorAge" class="form-label"></label>
                <input asp-for="InstructorAge" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="InstructorAge"></span>
            </span>
        </div>
                <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="Username"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="Password"></span>
            </span>
        </div>
        <div class="form-group  mb-3">
            <div class="d-flex justify-content-between">
                <label asp-for="PasswordConfirm" class="form-label"></label>
                <input asp-for="PasswordConfirm" class="w-70">
            </div>
            <span class="d-flex justify-content-end">
                <span asp-validation-for="PasswordConfirm"></span>
            </span>
        </div>
        <input type="submit" value="Register" class="btn btn-primary">
    </div>
</form>