@await Html.PartialAsync("_nav")
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h5 class="display-5">
                <a href="/user/@ViewBag.SingleIdea.UserId">@ViewBag.SingleIdea.Creator.Name</a> says:
            </h5>
            <h5 class="lead ideaBox">@ViewBag.SingleIdea.Title</h5>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <hr class="my-4">
            <h6 class="display-6">People who liked this post.</h6>

            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Alias</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (Like idea in ViewBag.SingleIdea.Likes)
                        {
                            <tr>
                                <td>
                                    <a href="/user/@idea.UserId">@idea.User.Alias</a>
                                </td>
                                <td>@idea.User.Name</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
