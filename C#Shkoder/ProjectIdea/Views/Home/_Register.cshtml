@model User


<div>
    
    <h1 class="text-white fst-italic">Register</h1>
    <form asp-controller="Home" asp-action="Register" method="POST">
        <div class="form-group text-white">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control input">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>

        <div class="form-group text-white fst-italic fst-italic">
            <label asp-for="Alias"></label>
            <input asp-for="Alias" class="form-control input">
            <span asp-validation-for="Alias" class="alert-danger"></span>
        </div>

        <div class="form-group text-white fst-italic">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control input">
            <span asp-validation-for="Email" class="alert-danger"></span>
        </div>

        <div class="form-group text-white fst-italic">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control input">
            <span asp-validation-for="Password" class="alert-danger"></span>
        </div>

        <div class="form-group text-white fst-italic">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control input">
            <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
        </div>

        <input type="submit" class="btn btn-outline-primary mt-2 beautiful-button" value="Register">
    </form>
</div>