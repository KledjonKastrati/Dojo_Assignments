@model LoginUser

<div>
    <h1 class="text-white fst-italic">Login</h1>

    <form asp-controller="Home" asp-action="CheckLogin" method="post">
        <div class="form-group text-white fst-italic">
            <label asp-for="LoginEmail"></label>
            <input asp-for="LoginEmail" class="form-control input">
            <span asp-validation-for="LoginEmail" class="alert-danger"></span>
        </div>

        <div class="form-group text-white fst-italic">
            <label asp-for="LoginPassword"></label>
            <input asp-for="LoginPassword" class="form-control input">
            <span asp-validation-for="LoginPassword" class="alert-danger"></span>
        </div>

        <input type="submit" class="btn btn-outline-success mt-2 beautiful-button" value="Login">
    </form>
</div>